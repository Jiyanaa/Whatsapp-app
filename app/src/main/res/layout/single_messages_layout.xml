<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="3dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/profile_image"/>

    <TextView
        android:id="@+id/receiver_messages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/sender_messages_layout"
        android:text="receiver messages"
        android:maxWidth="270dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>
    <TextView
        android:id="@+id/receiver_messages_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/receiver_messages_text"
        android:background="@drawable/receiver_messages_layout"
        android:layout_marginTop="0dp"
        android:layout_marginStart="-30dp"
        android:text="00:00"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/sender_messages_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="@+id/receiver_messages_text"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_messages_layout"
        android:text="sender messages"
        android:maxWidth="270dp"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/sender_messages_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/sender_messages_text"
        android:background="@drawable/sender_messages_layout"
        android:text="00:00"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/receiver_messages_img"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/message_profile_image"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp" />

    <ImageView
        android:id="@+id/sender_messages_img"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="3dp"
        android:layout_alignParentTop="@+id/receiver_messages_img"
        android:layout_alignParentEnd="true"
        android:background="@drawable/sender_messages_layout"
        android:padding="10dp" />

</RelativeLayout>